<% visitor = notification.visitor %>
<% book = notification.book %>
<div class="user-view clearfix">
  <%= link_to user_path(notification.visitor) do %>
    <% if visitor.image? %>
      <%= image_tag visitor.image.url, class: "icon_mini" %>
    <% else %>
      <%= image_tag "default.png", class: "icon_mini" %>
    <% end %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}å‰)" %></span><br>
  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="color: #787878;"><%= @comment %></p>
  <% end %>
  <hr>
</div>